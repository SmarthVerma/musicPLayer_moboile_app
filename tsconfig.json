{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    //
    "target": "ES6",
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,
    //
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/assets/*": [
        "./assets/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
